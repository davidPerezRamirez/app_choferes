<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="dialog_theme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowTitleStyle">@style/dialogTitleTheme</item>
        <item name="buttonBarNegativeButtonStyle">@style/dialog_button</item>
        <item name="buttonBarPositiveButtonStyle">@style/dialog_button</item>
        <item name="buttonBarNeutralButtonStyle">@style/dialog_button</item>
    </style>

    <style name="dialogTitleTheme">
        <item name="android:textSize">@dimen/medium_font_size</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="dialog_button">
        <item name="android:minWidth">64dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="android:textColor">@color/color_accent_green</item>
    </style>

    <style name="defaultFloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="elevation">6dp</item>
        <item name="fabSize">normal</item>
        <item name="android:layout_margin">20dp</item>
        <item name="backgroundTint">@color/color_accent_green</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>


</resources>
